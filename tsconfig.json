{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "paths": {
      "@web-tech/shared/lib/*": ["../shared/lib/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["./src/**/*"]
}
